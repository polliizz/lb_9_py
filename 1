def calculate_cosmic_distance(speed_of_light_fraction, time_years):
    return speed_of_light_fraction * time_years
def calculate_simplified_gravity(mass1, mass2, cosmic_factor=1.0):
    return mass1 * mass2 * cosmic_factor
def calculate_time_dilation_approximation(speed_of_light_fraction, time_seconds):
    if speed_of_light_fraction >= 1:
        return float('inf')
    return time_seconds / (1 - speed_of_light_fraction)
while True:
    print("\nЩо ви хочете розрахувати?")
    print("1 - Космічна відстань")
    print("2 - Спрощена гравітація")
    print("3 - Наближення сповільнення часу")
    choice = input("Введіть номер: ")
    if choice == '1':
        try:
            speed = float(input("Частка швидкості світла: "))
            time = float(input("Час: "))
            result = calculate_cosmic_distance(speed, time)
            print(f"\nПриблизна відстань: {result} років")
        except ValueError:
            print("Помилка")
    elif choice == '2':
        try:
            m1 = float(input("Маса 1 об'єкта: "))
            m2 = float(input("Маса 2 об'єкта: "))
            factor = input("Космічний фактор: ")
            factor = float(factor) if factor else 1.0
            result = calculate_simplified_gravity(m1, m2, factor)
            print(f"\nСпрощена гравітація: {result} одиниць")
        except ValueError:
            print("Помилка")

    elif choice == '3':
        try:
            speed = float(input("Частка швидкості світла: "))
            time = float(input("Час у секундах: "))
            result = calculate_time_dilation_approximation(speed, time)
            print(f"\nСповільнення часу: {result} секунд")
        except ValueError:
            print("Помилка")
        break
